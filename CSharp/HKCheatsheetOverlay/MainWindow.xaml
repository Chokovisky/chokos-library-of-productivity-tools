<Window x:Class="HKCheatsheetOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChokoLPT - HK Cheatsheet Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual"
        Width="1300"
        Height="750"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        Loaded="Window_Loaded"
        Topmost="True"
        ShowInTaskbar="False">
    
    <!-- Main Container with rounded corners and shadow -->
    <Border Background="{StaticResource BgPrimaryBrush}" 
            CornerRadius="12" 
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            Margin="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Profile Pills (compact header) -->
                <RowDefinition Height="*"/>     <!-- Content -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>
            
            <!-- Compact Header with Profile Pills -->
            <Border Grid.Row="0" Background="{StaticResource BgSecondaryBrush}" 
                    CornerRadius="12,12,0,0"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo/Title compact -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="âŒ¨ï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="ChokoLPT" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Profile Pills centered -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" x:Name="ProfilesPanel" HorizontalAlignment="Center"/>
                    
                    <!-- Hotkey hint -->
                    <TextBlock Grid.Column="2" 
                               Text="ALT+F1" 
                               FontSize="11" 
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="12,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>  <!-- Sidebar mais compacta -->
                    <ColumnDefinition Width="*"/>    <!-- Global -->
                    <ColumnDefinition Width="*"/>    <!-- Context -->
                </Grid.ColumnDefinitions>
                
                <!-- Sidebar - Contexts -->
                <Border Grid.Column="0" 
                        Background="{StaticResource BgSecondaryBrush}" 
                        CornerRadius="8"
                        Margin="0,0,6,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Sidebar Header -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource BgTertiaryBrush}" 
                                CornerRadius="8,8,0,0"
                                Padding="10,8">
                            <StackPanel>
                                <TextBlock Text="CONTEXTOS" 
                                           FontSize="11" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="F2 + Scroll" 
                                           FontSize="9" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Context List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="6">
                            <StackPanel x:Name="ContextsPanel"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Global Hotkeys -->
                <Border Grid.Column="1" 
                        Background="{StaticResource BgSecondaryBrush}" 
                        CornerRadius="8"
                        Margin="6,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Global Header -->
                        <Border Grid.Row="0" 
                                Background="#1A1A00" 
                                CornerRadius="8,8,0,0"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="GlobalHeader"
                                           Text="GLOBAL" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource AccentGoldBrush}"/>
                                <TextBlock Text=" â€¢ F1+Scroll" 
                                           FontSize="10" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Global Hotkeys List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      x:Name="GlobalScroller">
                            <StackPanel x:Name="GlobalHotkeysPanel" Margin="8,6"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Context Hotkeys -->
                <Border Grid.Column="2" 
                        Background="{StaticResource BgSecondaryBrush}" 
                        CornerRadius="8"
                        Margin="6,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Context Header -->
                        <Border Grid.Row="0" 
                                x:Name="ContextHeaderBorder"
                                Background="#0A1A10" 
                                CornerRadius="8,8,0,0"
                                Padding="12,8">
                            <TextBlock x:Name="ContextHeader"
                                       Text="DESKTOP" 
                                       FontSize="12" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentGreenBrush}"/>
                        </Border>
                        
                        <!-- Context Hotkeys List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      x:Name="ContextScroller">
                            <StackPanel x:Name="ContextHotkeysPanel" Margin="8,6"/>
                        </ScrollViewer>
                        
                        <!-- Empty State -->
                        <StackPanel x:Name="ContextEmptyState" 
                                    Grid.Row="1"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Visibility="Collapsed">
                            <TextBlock Text="ðŸ–¥ï¸" FontSize="32" HorizontalAlignment="Center" Opacity="0.4"/>
                            <TextBlock Text="Desktop / Global" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="Selecione um contexto" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextMutedBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Footer compact -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BgSecondaryBrush}" 
                    Padding="12,6"
                    CornerRadius="0,0,12,12">
                <Grid>
                    <TextBlock Text="ESC fechar  â€¢  Clique arrasta" 
                               FontSize="10" 
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="HotkeyCount"
                               Text="0 hotkeys" 
                               FontSize="10" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
