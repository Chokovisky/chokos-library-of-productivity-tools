<Application x:Class="RadialMenu.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Dark Theme Colors -->
            <Color x:Key="BackgroundColor">#1E1E1E</Color>
            <Color x:Key="SurfaceColor">#2D2D2D</Color>
            <Color x:Key="SurfaceHoverColor">#3D3D3D</Color>
            <Color x:Key="AccentColor">#0078D4</Color>
            <Color x:Key="AccentHoverColor">#1E90FF</Color>
            <Color x:Key="TextColor">#FFFFFF</Color>
            <Color x:Key="TextSecondaryColor">#AAAAAA</Color>
            <Color x:Key="BorderColor">#404040</Color>
            <Color x:Key="CancelZoneColor">#3D3D3D</Color>
            
            <!-- Brushes -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
            <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
            <SolidColorBrush x:Key="CancelZoneBrush" Color="{StaticResource CancelZoneColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
